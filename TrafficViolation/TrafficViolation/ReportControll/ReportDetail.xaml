<Window x:Class="TrafficViolation.ReportControll.ReportDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi Tiết Phản Ánh" Height="500" Width="1000">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#003366" Offset="0.0"/>
            <GradientStop Color="#00AEEF" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Mã phản ánh:" Foreground="White" FontSize="14" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Name="txtReportID" 
                 Text="{Binding ReportId}" IsReadOnly="True" IsEnabled="False"/>

        <TextBlock Text="Người phản ánh:" Foreground="White" FontSize="14" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Name="txtReporterName" 
                 Text="{Binding Reporter.FullName}" IsReadOnly="True" IsEnabled="False"/>
        <TextBox Name="txtReporterId" Text="{Binding ReporterId}" Visibility="Hidden"/>
        <TextBlock Text="Loại vi phạm:" Foreground="White" FontSize="14" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Name="txtViolationType" 
                 Text="{Binding ViolationType}" IsReadOnly="True" IsEnabled="False"/>

        <TextBlock Text="Mô tả chi tiết:" Foreground="White" FontSize="14" Grid.Row="3" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="5" Height="80" TextWrapping="Wrap" AcceptsReturn="True" 
                 Name="txtDescription" Text="{Binding Description}" IsReadOnly="True" IsEnabled="False"/>

        <TextBlock Text="Biển số xe:" Foreground="White" FontSize="14" Grid.Row="4" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="5" Name="txtPlateNumber" 
                 Text="{Binding PlateNumber}" IsReadOnly="True" IsEnabled="False"/>

        <TextBlock Text="Hình ảnh:" Foreground="White" FontSize="14" Grid.Row="5" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="5" Name="txtImageUrl" 
                 Text="{Binding ImageUrl}" IsReadOnly="True" IsEnabled="False"/>

        <TextBlock Text="Video:" Foreground="White" FontSize="14" Grid.Row="6" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="6" Grid.Column="1" Margin="5" Name="txtVideoUrl" 
                 Text="{Binding VideoUrl}" IsReadOnly="True" IsEnabled="False"/>

        <TextBlock Text="Địa điểm:" Foreground="White" FontSize="14" Grid.Row="7" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="7" Grid.Column="1" Margin="5" Name="txtLocation" 
                 Text="{Binding Location}" IsReadOnly="True" IsEnabled="False"/>

        <TextBlock Text="Ngày phản ánh:" Foreground="White" FontSize="14" Grid.Row="8" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="8" Grid.Column="1" Margin="5" Name="txtReportDate" 
                 Text="{Binding ReportDate}" IsReadOnly="True" IsEnabled="False"/>

        <TextBlock Text="Trạng thái:" Foreground="White" FontSize="14" Grid.Row="9" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="9" Grid.Column="1" Margin="5" Name="txtStatus" Text="{Binding Status}" IsReadOnly="False" IsEnabled="True"/>

        <TextBlock Text="Người xử lý:" Foreground="White" FontSize="14" Grid.Row="10" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="10" Grid.Column="1" Margin="5" Name="txtProcessedBy" Text="{Binding ProcessedByNavigation.FullName}"/>

        <Grid Grid.Row="11" Grid.ColumnSpan="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Tạo Biên Bản" Width="95" Margin="237,5,0,5" Grid.Column="0" HorizontalAlignment="Left" Name="btCompile" Click="btConfirm_Click"/>
            <Button Content="Từ chối" Width="92" Margin="59,5,0,5" Grid.Column="1" HorizontalAlignment="Left" Name="btRefuse" Click="btRefuse_Click"/>
            <Button Content="Đóng" Width="87" Margin="337,5,0,5" HorizontalAlignment="Left" Name="btClose" Click="btClose_Click" Grid.ColumnSpan="2"/>
        </Grid>
    </Grid>
</Window>
