<Window x:Class="TrafficViolation.ViolationControll.ViolationPay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficViolation.ViolationControll"
        mc:Ignorable="d"
        Title="ViolationPay" Height="450" Width="800">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#003366" Offset="0.0"/>
            <GradientStop Color="#00AEEF" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="10">
        <DataGrid x:Name="dgViolation" AutoGenerateColumns="False" HeadersVisibility="Column"
                  ItemsSource="{Binding Violation}" Height="325" VerticalAlignment="Top"
                  IsReadOnly="False" CanUserAddRows="False" SelectionChanged="dgViolation_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Violation ID" Binding="{Binding ViolationId}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Report ID" Binding="{Binding ReportId}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="PlateNumber" Binding="{Binding PlateNumber}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="ViolatorId" Binding="{Binding ViolatorId}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="FineAmount" Binding="{Binding FineAmount}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="FineDate" Binding="{Binding FineDate}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="PaidStatus" Binding="{Binding PaidStatus}" Width="100" IsReadOnly="True"/>

                <!-- Cột nút "Cập nhật" -->
                <DataGridTemplateColumn Header="Cập nhật" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Cập nhật" Padding="5,2"
                                    Click="UpdateButton_Click"
                                    CommandParameter="{Binding}"/>
                            <!-- Bind to the current item -->
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>