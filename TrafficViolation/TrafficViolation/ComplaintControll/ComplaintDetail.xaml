<Window x:Class="TrafficViolation.ComplaintControll.ComplaintDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi Tiết Khiếu Nại" Height="600" Width="900" Background="LightBlue"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Chi Tiết Khiếu Nại Từ Người Dân " 
             Foreground="Red" 
             FontSize="24" 
             FontWeight="Bold"
             HorizontalAlignment="Center"
             Margin="0,10,0,10" Width="480"/>
        <Label Content="Mã Khiếu Nại" Grid.Row="1" Grid.Column="0"/>
        <Label Content="Lỗi Vi Phạm" Grid.Row="3" Grid.Column="0"/>
        <Label Content="Ngày Vi Phạm" Grid.Row="5" Grid.Column="0"/>
        <Label Content="Biển Số Xe" Grid.Row="7" Grid.Column="0"/>
        <Label Content="Vị Trí Vi Phạm" Grid.Row="9" Grid.Column="0"/>
        <Label Content="Nội Dung Khiếu Nại" Grid.Row="11" Grid.Column="0"/>
        <Label Content="Ngày Khiếu Nại" Grid.Row="13" Grid.Column="0"/>
        <Label Content="Trạng Thái " Grid.Row="15" Grid.Column="0"/>
        <Label Content="Người Xử Lý" Grid.Row="17" Grid.Column="0"/>
        <Label Content="Người Khiếu Nại" Grid.Row="19" Grid.Column="0"/>
        <TextBox Grid.Row="2" Grid.Column="0" Name="txtComplaintID"/>
        <TextBox Grid.Row="4" Grid.Column="0" Name="txtViolationType"/>
        <DatePicker Grid.Row="6" Grid.Column="0" Name="dpReportDate"/>
        <TextBox Grid.Row="8" Grid.Column="0" Name="txtPlateNumber"/>
        <TextBox Grid.Row="10" Grid.Column="0" Name="txtLocation"/>
        <TextBox Grid.Row="12" Grid.Column="0"  Name="txtComplaintText"/>
        <DatePicker Grid.Row="14" Grid.Column="0" Name="dbComplaintDate"/>
        <TextBox Grid.Row="16" Grid.Column="0" Name="txtStatus" />
        <TextBox Grid.Row="18" Grid.Column="0" Name="txtProcessedBy" />
        <TextBox Grid.Row="20" Grid.Column="0" Name="txtComplaintBy" />
        <StackPanel Grid.Row="22" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Chấp Nhận" Width="100" Margin="5" Click="Accept_Click"/>
            <Button Content="Từ Chối" Width="100" Margin="5" Click="Cancle_Click"/>
        </StackPanel>
    </Grid>











    
    
</Window>
