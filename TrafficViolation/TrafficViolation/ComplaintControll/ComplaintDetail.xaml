<Window x:Class="TrafficViolation.ComplaintControll.ComplaintDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficViolation.ComplaintControll"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="ComplaintDetail" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Complaint Details" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

        <TextBlock Text="Complaint ID:" FontWeight="Bold" Grid.Row="1"/>
        <TextBlock Text="{Binding ComplaintId}" Grid.Row="1" Margin="120,0,0,0"/>

        <TextBlock Text="User ID:" FontWeight="Bold" Grid.Row="2"/>
        <TextBlock Text="{Binding UserId}" Grid.Row="2" Margin="120,0,0,0"/>

        <TextBlock Text="Report ID:" FontWeight="Bold" Grid.Row="3"/>
        <TextBlock Text="{Binding ReportId}" Grid.Row="3" Margin="120,0,0,0"/>

        <TextBlock Text="Violation ID:" FontWeight="Bold" Grid.Row="4"/>
        <TextBlock Text="{Binding ViolationId}" Grid.Row="4" Margin="120,0,0,0"/>

        <TextBlock Text="Complaint Text:" FontWeight="Bold" Grid.Row="5"/>
        <TextBlock Text="{Binding ComplaintText}" Grid.Row="5" Margin="120,0,0,0" TextWrapping="Wrap" Width="280"/>

        <TextBlock Text="Complaint Date:" FontWeight="Bold" Grid.Row="6"/>
        <TextBlock Text="{Binding ComplaintDate}" Grid.Row="6" Margin="120,0,0,0"/>

        <TextBlock Text="Status:" FontWeight="Bold" Grid.Row="7"/>
        <TextBlock Text="{Binding Status}" Grid.Row="7" Margin="120,0,0,0"/>

        <Button Content="Close" Click="Close_Click" HorizontalAlignment="Right" Grid.Row="8" Margin="0,10,0,0"/>
    </Grid>
</Window>
