<Window x:Class="TrafficViolation.NotificationControll.NotificationsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficViolation.NotificationControll"
        mc:Ignorable="d"
        Title="NotificationsView" Height="475" Width="924"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#003366" Offset="0.0"/>
            <GradientStop Color="#00AEEF" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,0,10,24">
        <DataGrid x:Name="dgNotification" AutoGenerateColumns="False" HeadersVisibility="Column"
      ItemsSource="{Binding Notification}" CanUserAddRows="False" Margin="53,43,36,68"
      IsReadOnly="False">
            <DataGrid.Columns >
                <DataGridTextColumn Header="NotificationId" Binding="{Binding NotificationId}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Message" Binding="{Binding Message,Mode=TwoWay}" Width="540" IsReadOnly="True"/>
                <!-- Nút Edit -->
                <DataGridTemplateColumn Header="VIEW DETAIL" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="View Detail" Padding="5,2"
                        Click="ViewDetail_Click"
                        CommandParameter="{Binding NotificationId}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
