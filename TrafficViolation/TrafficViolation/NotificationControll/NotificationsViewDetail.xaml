<Window x:Class="TrafficViolation.NotificationControll.NotificationsViewDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficViolation.NotificationControll"
        mc:Ignorable="d"
        Title="NotificationsViewDetail" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="dgNotification" AutoGenerateColumns="False" HeadersVisibility="Column"
ItemsSource="{Binding Notification}" Margin="38,29,106,82"
IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="NotificationId" Binding="{Binding NotificationId}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="UserId" Binding="{Binding UserId}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="Date" Binding="{Binding SentDate,Mode=TwoWay}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Message" Binding="{Binding Message,Mode=TwoWay}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="SentDate" Binding="{Binding SentDate,Mode=TwoWay}" Width="100" IsReadOnly="True"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
