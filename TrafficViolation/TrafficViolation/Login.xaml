<Window x:Class="TrafficViolation.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficViolation"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#003366" Offset="0.0"/>
            <!-- Xanh đậm -->
            <GradientStop Color="#00AEEF" Offset="1.0"/>
            <!-- Xanh nhạt -->
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Phone Number"  HorizontalAlignment="Left" Margin="153,140,0,0" VerticalAlignment="Top" Height="43" Width="96" Grid.ColumnSpan="2"/>
        <Label Content="Password"  HorizontalAlignment="Left" Margin="153,229,0,0" VerticalAlignment="Top" Height="35" Width="76" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Name="phoneNumber" Margin="280,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="271" TextChanged="TextBox_TextChanged" Height="43" Grid.ColumnSpan="2"/>
        <PasswordBox HorizontalAlignment="Left" Name="Password" 
             Margin="280,221,0,0" VerticalAlignment="Top" 
             Width="271" Height="43" Grid.ColumnSpan="2"/>

        <Button Content="Login" Name="LoginButton" HorizontalAlignment="Left" Margin="280,332,0,0" VerticalAlignment="Top" Height="45" Width="76" Click="LoginButton_Click" Grid.ColumnSpan="2"/>
        <Button Content="Quit" Name="QuitButton" HorizontalAlignment="Left" Margin="410,332,0,0" VerticalAlignment="Top" Height="45" Width="79" Click="QuitButton_Click" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
