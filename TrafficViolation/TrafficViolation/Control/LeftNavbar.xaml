<UserControl x:Class="TrafficViolation.Control.LeftNavbar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="Auto" Width="200">

    <Grid Background="#003366">
        <StackPanel>
            <TextBlock Text="MENU" Foreground="White" FontSize="18"
                       FontWeight="Bold" Margin="10"/>
            <Button Content="☰ Menu" Click="ToggleNavbar_Click"/>
            <Button Content="Dashboard" Click="Dashboard_Click" Margin="5"
                    Background="Transparent" Foreground="White"/>

            <Button Content="ChangePassword" Click="ChangePassword_Click" Margin="5"
                    Background="Transparent" Foreground="White"/>

            <Button Content="View Profile" Click="Profile_Click" Margin="5"
                    Background="Transparent" Foreground="White"/>

            <Button Content="Logout" Click="Logout_Click" Margin="5"
                    Background="Transparent" Foreground="White"/>
        </StackPanel>
    </Grid>

</UserControl>
