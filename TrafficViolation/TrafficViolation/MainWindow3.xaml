<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficViolation"
        xmlns:Control="clr-namespace:TrafficViolation.Control" x:Class="TrafficViolation.MainWindow3"
        mc:Ignorable="d"
        Title="MainWindow3" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#003366" Offset="0.0"/>
            <GradientStop Color="#00AEEF" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Cột Navbar -->
            <ColumnDefinition Width="200"/>
            <!-- Cột nội dung chính -->
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Navbar (Đặt trong Grid.Column="0") -->


        <!-- Nội dung chính (Grid.Column="1") -->
        <Grid Grid.Column="1" Grid.ColumnSpan="2">
            <!-- Tiêu đề hệ thống -->
            <Label Content="Traffic Violation System"
               FontSize="24" FontWeight="Bold"
               Foreground="White"
               HorizontalAlignment="Left" Margin="89,44,0,0"
               VerticalAlignment="Top"/>

            <!-- Ảnh đại diện người dùng với menu dropdown -->

            <Image x:Name="Image" 
       HorizontalAlignment="Left" 
       Height="77" 
       Margin="493,30,0,0" 
       VerticalAlignment="Top" 
       Width="87" 
       Cursor="Hand">

            </Image>


            <Button Content="Quản Lý Người Dùng" HorizontalAlignment="Left" Height="68" Margin="312,236,0,0" VerticalAlignment="Top" Width="127" Click="UserManage_Click" RenderTransformOrigin="2.187,2.213"/>
            <Button Content="Báo Cáo Vi Phạm" HorizontalAlignment="Left" Height="65" Margin="61,119,0,0" VerticalAlignment="Top" Width="128" x:Name="btReport" Click="btReport_Click"/>
            <Button Content="Vi phạm" HorizontalAlignment="Left" Margin="61,236,0,0" VerticalAlignment="Top" Width="128" RenderTransformOrigin="0.5,0.5" Height="69" Click="btReportView_Click"/>
            <Button Content="Thông Báo" HorizontalAlignment="Left" Margin="312,119,0,0" VerticalAlignment="Top" Height="65" Width="134" Click="Nofication_Click"/>

        </Grid>

        <Control:LeftNavbar HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="424"/>

    </Grid>
</Window>
