<Window x:Class="TrafficViolation.Views.ViewAuditLogs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Audit Logs" Height="450" Width="800">
	<Grid>
		<DataGrid ItemsSource="{Binding AuditLogs}" AutoGenerateColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Log ID" Binding="{Binding LogId}" />
				<DataGridTextColumn Header="User ID" Binding="{Binding UserId}" />
				<DataGridTextColumn Header="Action" Binding="{Binding Action}" />
				<DataGridTextColumn Header="Date" Binding="{Binding ActionDate}" />
				<DataGridTextColumn Header="Details" Binding="{Binding Details}" />
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Window>